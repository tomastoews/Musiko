<div class="px-4 pb-4">
    <h2 class="text-light mb-3">{{ this.title }}</h2>
    <div class="row">

        {{#each this.data }}
            <div class="col-sm-6 col-md-4 col-lg-4 col-xl-2 mb-3">
                <a href="album/{{this.id}}">
                    <div class="card bg-secondary">
                        <img 
                            src="{{ this.preview_img_md }}" 
                            alt="{{ this.name }}"
                            class="card-img-top" 
                            draggable="false">
                        <div class="card-body">
                            <h5 class="card-title text-light">{{ this.name }}</h5>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}

    </div>
</div>
