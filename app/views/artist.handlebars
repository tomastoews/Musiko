<div class="px-4 py-4">
    <div class="row">
        <div class="col-lg-4 col-md-8 text-light">
            <h1>{{artist.name}}</h1>

            <div class="pt-4">
                <table class="table table-dark">
                    <tbody>
                        <tr>             
                            <td>Total Albums: {{ artist.total_albums }}</td>
                        </tr>
                        <tr>             
                            <td>Popularity: {{ artist.popularity }} %</td>
                        </tr>
                    </tbody>
                    </table>
            </div>
        </div>

        {{#if artist.genres }}
            <div class="col-lg-4 col-md-4 mb-4">
                <h3 class="text-light">Genres:</h3>
                {{#each artist.genres }}
                    <a 
                        href="genre?search={{ this }}"
                        class="btn btn-secondary mb-3 mr-3">
                        <i class="fas fa-music mr-2"></i>
                        {{ this }}
                    </a>
                {{/each}}
            </div>
        {{/if }}

        <div class="col-lg-4 col-md-4 mb-4">
            <img 
                src="{{artist.preview_img_lg}}"
                alt="{{artist.name}}"
                style="width: 100%"
                draggable="false">
        </div>

        <div class="col-lg-12">
            <h2 class="text-light mb-3">Albums:</h2>
            {{#if artist.albums }}
                <div class="row">
                    {{#each artist.albums }}                
                        <div class="px-0 col-sm-6 col-md-6 col-lg-6 col-xl-4">
                            <a href="album/{{this.id}}">                 
                                <div class="card bg-secondary mb-3 mr-3">
                                    <div class="row no-gutters">
                                        <div class="col-md-4">
                                            <img 
                                                src="{{this.preview_img_md}}" 
                                                class="card-img" 
                                                alt="{{this.name}}"
                                                draggable="false">
                                        </div>
                                        <div class="col-md-8 d-flex flex-column justify-content-center">
                                            <div class="card-body text-light">
                                                <h5 class="card-title">{{this.name}}</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/each }}
                </div>
            {{/if }}
        </div>

    </div>
</div>